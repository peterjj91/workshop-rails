<div class="row">
  <div class="form-promo col-sm-6">
  <%= form_with model: [:web, :admin, @article], local: true do |form| %>    
    <div class="form-group row">
      <div class="col-sm-4">
        <%= form.label :title%>
      </div>

      <div class="col-sm-8">
        <%= form.text_area :title, rows: 7, cols: 60 %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-4">
        <%= form.label :body%>
      </div>

      <div class="col-sm-8">
        <%= form.text_area :body, rows: 7, cols: 60 %>
      </div>
    </div>

    <p><%= form.submit %></p>
  <% end %>
  </div>
</div>